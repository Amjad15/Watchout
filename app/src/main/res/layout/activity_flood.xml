<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/background_light">
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        tools:layout_editor_absoluteY="25dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="170dp"
            android:layout_height="41dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="134dp"
            android:layout_marginStart="109dp"
            android:layout_marginTop="5dp"
            android:text="Flood"
            android:textAlignment="center"
            android:textColor="#90b4fe"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:layout_constraintBottom_toTopOf="@+id/imageView1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.528"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="139dp"
            android:layout_height="34dp"
            android:layout_marginEnd="205dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:text="What is it?"
            android:textColor="#90b4fe"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView1" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="92dp"
            android:layout_height="38dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:text="signs"
            android:textColor="#90b4fe"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="335dp"
            android:layout_height="97dp"
            android:layout_marginLeft="12dp"
            android:text='A flood is an overflow of water that submerges land that is usually dry. The European Union (EU) Floods Directive defines a flood as a covering by water of land not normally covered by water. In the sense of "flowing water", the word may also be applied to the inflow of the tide.'
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold"
            android:typeface="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="328dp"
            android:layout_height="193dp"
            android:layout_marginEnd="13dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="3dp"
            android:text="Common warning signs include intense rainfall, dam or levee failure as well as other events such as slowmoving tropical storms and early snowmelt can all contribute to flooding, whether you live in a flood zone or not. Homes with flood damage cause severe financial loss as well as grave emotional hardships for a homeowner, so it's vital you be prepared and know where to turn if your home is affected by flooding."
            android:textAlignment="viewStart"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold"
            android:typeface="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="306dp"
            android:layout_height="136dp"
            android:layout_marginBottom="2dp"

            android:layout_marginTop="5dp"
            android:src="@drawable/im1"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:srcCompat="@drawable/flood" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>